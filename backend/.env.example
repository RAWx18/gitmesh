# ========================
# ENVIRONMENT CONFIGURATION
# ========================
ENVIRONMENT=development

# ========================
# SERVER CONFIGURATION
# ========================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://localhost:8000

# ========================
# SECURITY CONFIGURATION
# ========================
SECRET_KEY=[REDACTED]
JWT_SECRET=[REDACTED]
JWT_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# ========================
# GITHUB OAUTH CONFIGURATION
# ========================
GITHUB_CLIENT_ID=[REDACTED]
GITHUB_CLIENT_SECRET=[REDACTED]
GITHUB_CALLBACK_URL=http://localhost:8000/api/v1/auth/github/callback
GITHUB_MAX_RETRIES=3

# ========================
# GITHUB API CONFIGURATION
# ========================
# GitHub Personal Access Token for API access (optional for public repos)
# Generate at: https://github.com/settings/tokens/new
# Required scopes: public_repo (for public repositories)
GITHUB_TOKEN=[REDACTED]

# ========================
# AI/LLM CONFIGURATION
# ========================
AI_PROVIDER=gemini
GEMINI_API_KEY=[REDACTED]
# Alternative keys (commented out):
# [REDACTED] (rawx18)
# [REDACTED] (gitmesh.oss)
# [REDACTED] (ryanmadhuwala05)
AI_DEFAULT_MODEL=gemini-2.0-flash
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000
AI_TIMEOUT=30
AI_RETRY_ATTEMPTS=2

# ========================
# DATABASE CONFIGURATION
# ========================
DATABASE_URL=[REDACTED]
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# ========================
# REDIS CONFIGURATION
# ========================
REDIS_URL=[REDACTED]
REDIS_HOST=redis-15953.c98.us-east-1-4.ec2.redns.redis-cloud.com
REDIS_PORT=16639
REDIS_USERNAME=default
REDIS_PASSWORD=[REDACTED]
REDIS_DB=0

# Redis SSL Configuration
REDIS_SSL=false
REDIS_SSL_CERT_REQS=none
REDIS_SSL_CA_CERTS=
REDIS_SSL_CERTFILE=
REDIS_SSL_KEYFILE=
REDIS_SSL_CHECK_HOSTNAME=false

# Redis Connection Settings
REDIS_SOCKET_TIMEOUT=60.0
REDIS_CONNECT_TIMEOUT=30.0
REDIS_SOCKET_KEEPALIVE=true
REDIS_RETRY_ON_TIMEOUT=true
REDIS_HEALTH_CHECK_INTERVAL=30
REDIS_MAX_CONNECTIONS=20
REDIS_DECODE_RESPONSES=true
REDIS_ENCODING=utf-8

# ========================
# HASHICORP VAULT CONFIGURATION
# ========================
VAULT_ENABLED=true
VAULT_ADDR=http://127.0.0.1:8200
VAULT_TOKEN=[REDACTED]
VAULT_MOUNT_POINT=secret

# ========================
# TIER LIMITS CONFIGURATION
# ========================
TIER_PLAN=pro
TIER_FREE_LIMIT=50000
TIER_PRO_LIMIT=500000
TIER_ENTERPRISE_LIMIT=2000000

# ========================
# LOGGING CONFIGURATION
# ========================
LOG_LEVEL=INFO
LOG_FORMAT=json
DEBUG_MODE=false

# ========================
# LEGACY SUPPORT (will be deprecated)
# ========================
SUPABASE_URL=[REDACTED]
SUPABASE_KEY=[REDACTED]
SUPABASE_SERVICE_ROLE_KEY=[REDACTED]