# ========================
# ENVIRONMENT CONFIGURATION
# ========================
ENVIRONMENT=development  # development, staging, production

# ========================
# SERVER CONFIGURATION
# ========================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://localhost:8000

# ========================
# DATABASE CONFIGURATION
# ========================
DATABASE_URL=postgresql+asyncpg://username:password@host:port/database
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# ========================
# REDIS CONFIGURATION
# ========================
REDIS_URL=redis://username:password@host:port/db
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Redis SSL Configuration (for Redis Cloud)
REDIS_SSL=false
REDIS_SSL_CERT_REQS=none
REDIS_SSL_CA_CERTS=
REDIS_SSL_CERTFILE=
REDIS_SSL_KEYFILE=
REDIS_SSL_CHECK_HOSTNAME=false

# Redis Connection Settings
REDIS_SOCKET_TIMEOUT=5.0
REDIS_CONNECT_TIMEOUT=5.0
REDIS_SOCKET_KEEPALIVE=true
REDIS_RETRY_ON_TIMEOUT=true
REDIS_HEALTH_CHECK_INTERVAL=30
REDIS_MAX_CONNECTIONS=20
REDIS_DECODE_RESPONSES=true
REDIS_ENCODING=utf-8

# ========================
# SECURITY CONFIGURATION
# ========================
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-chars
JWT_SECRET=your-jwt-secret-key-change-in-production-minimum-32-chars
JWT_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# ========================
# GITHUB OAUTH CONFIGURATION
# ========================
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:8000/api/v1/auth/github/callback
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret
GITHUB_MAX_RETRIES=3postgre

# ========================
# AI/LLM CONFIGURATION
# ========================
AI_PROVIDER=gemini  # gemini, openai, anthropic
GEMINI_API_KEY=your_gemini_api_key
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
AI_DEFAULT_MODEL=gemini-2.0-flash
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000
AI_TIMEOUT=30
AI_RETRY_ATTEMPTS=2

# ========================
# HASHICORP VAULT CONFIGURATION
# ========================
VAULT_ENABLED=false
VAULT_ADDR=http://127.0.0.1:8200
VAULT_TOKEN=your_vault_token
VAULT_MOUNT_POINT=secret

# ========================
# TIER LIMITS CONFIGURATION
# ========================
TIER_PLAN=pro  # free, pro, enterprise
TIER_FREE_LIMIT=50000
TIER_PRO_LIMIT=500000
TIER_ENTERPRISE_LIMIT=2000000

# ========================
# LOGGING CONFIGURATION
# ========================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json  # json, text
DEBUG_MODE=false

# ========================
# LEGACY SUPPORT (will be deprecated)
# ========================
# These are kept for backward compatibility but should be migrated
SUPABASE_URL=postgresql://username:password@host:port/database
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key